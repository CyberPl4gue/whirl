@import '../../node_modules/normalize.css/normalize.css';
/**
  * Simple styles to aid with development
*/
*
  box-sizing border-box

body
  background #6bb9f0

h1
  text-align center
  font-family 'Lato', sans-serif

.whirls
  justify-content center
  display        flex
  flex-direction row
  flex-wrap      wrap

.whirl-container
  display flex
  height  200px
  width   20%
  border  1px solid rgba(0, 0, 0, .5)
  margin  10px
  border-radius 10px
  position relative
  overflow hidden

  @media(max-width: 600px)
    width 100%
