@import '../vars.styl'
/**
  * Rotary
  *
  * @author jh3y - https://github.com/jh3y
*/

@keyframes whirl-rotary
  0%
    transform rotate(0deg) translateX(150%) scale(1)
  25%
    transform rotate(360 * .25deg) translateX(150%) scale(0)
  75%
    transform rotate(360 * .75deg) translateX(150%) scale(1.5)
  100%
    transform rotate(360deg) translateX(150%) scale(1)

$size = 25px
$color = $whirl-primary

[data-whirl='rotary']
  &:before
    $create-pseudo($size, $size)
    animation whirl-rotary 1s infinite linear
    background-color $color
    border-radius 100%
