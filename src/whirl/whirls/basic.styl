/**
  * Basic ringed whirl
*/
@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

[data-whirl='basic']
  &:after
    content           ''
    height            50px
    width             50px
    position          absolute
    top               50%
    left              50%
    margin-left       -25px
    margin-top        -25px
    animation rotate  .5s infinite linear
    border            4px red solid
    border-left-color green
    border-radius     100%
