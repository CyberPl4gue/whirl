@import '../common/animation/rotate.styl'
@import '../vars.styl'

/**
  * Basic
  *
  * @author jh3y - https://github.com/jh3y
*/

$thickness = 6px
$color-one = $whirl-primary
$color-two = $whirl-secondary

[data-whirl='basic']
  &:before
    $create-pseudo()
    animation         whirl-rotate 1s infinite linear
    border            $thickness $color-one solid
    border-left-color $color-two
    border-radius     100%
