@import '../vars.styl'
/**
  * Combine 2
  *
  * @author jh3y - https://github.com/jh3y
*/
$size = 30px
$radius = 100%
$duration = 2s
$color = $whirl-primary

@keyframes whirl-combine-two-t
  25%
    transform translateY(-($radius))
  50%
    transform translateY(50%)
  75%
    transform translateY($radius + 50%)

@keyframes whirl-combine-two-r
  25%
    transform translateX($radius)
  50%
    transform translateX(-50%)
  75%
    transform translateX(-($radius + 50%))

@keyframes whirl-combine-two-b
  25%
    transform translateY($radius)
  50%
    transform translateY(-50%)
  75%
    transform translateY(-($radius + 50%))

@keyframes whirl-combine-two-l
  25%
    transform translateX(-($radius))
  50%
    transform translateX(50%)
  75%
    transform translateX($radius + 50%)

[data-whirl='combine-two']
  left 50%
  position absolute
  top 50%
  transform rotate(45deg) translate(-($size / 2), -($size / 2))

  div
    border ($size / 2) solid transparent
    position absolute

  div:nth-child(1)
    animation whirl-combine-two-t $duration infinite
    border-top-color $color
  div:nth-child(2)
    animation whirl-combine-two-r $duration infinite
    border-right-color $color
  div:nth-child(3)
    animation whirl-combine-two-b $duration infinite
    border-bottom-color $color
  div:nth-child(4)
    animation whirl-combine-two-l $duration infinite
    border-left-color $color
