$scaleRadius   = 20px
$size          = 12px

$numberOfDots  = 5
$dotColors     = white purple white purple white


getPosition(angle)
  xPos = $scaleRadius * cos(angle * (PI / 180))
  yPos = $scaleRadius * sin(angle * (PI / 180))
  (xPos yPos)

genShadow($pos)
  $shadows = ()
  for $dot in (1..$numberOfDots)
    $angle       = (360 / $numberOfDots) * ($dot - 1)
    $xy          = getPosition($angle)
    $dots        = $numberOfDots
    $truePos     = $dot + $pos
    $colorIndex  = $truePos % $dots
    $shadowProps = $xy 0 0 $dotColors[$colorIndex]
    push($shadows, join(' ', $shadowProps))
  (unquote(join(',', $shadows)))

@keyframes whirl-palette
  for $per in (0..$numberOfDots)
    {($per * (100 / $numberOfDots)) * 1%}
      color $dotColors[0]
      box-shadow genShadow($per)
      if $per == $numberOfDots
        transform rotate(360deg)


[data-whirl='palette']
  &:before
    $create-pseudo($size, $size)
    border-radius 100%
    animation     whirl-palette 2s infinite linear
