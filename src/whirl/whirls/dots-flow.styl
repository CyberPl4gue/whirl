/**
  * Dots flow
  *
  * @author jh3y - https://github.com/jh3y
*/

$size = 16px
$no-of-dots = 3
$margin = 10px
$y = 2 * $size
$x2 = $margin + $size
$x1 = -($x2)
$scale = $size / 4px

@keyframes whirl-dots-flow
  0%
    box-shadow $x1 $y 0px 0 white,
      0px $y 0 0 white,
      $x2 $y 0 0 white
  25%
    box-shadow $x1 $y 0 $scale purple,
      0px $y 0 0 white,
      $x2 $y 0 0 white
  50%
    box-shadow $x1 $y 0 0 white,
      0px $y 0 $scale purple,
      $x2 $y 0 0 white
  75%
    box-shadow $x1 $y 0px 0 white,
      0px $y 0 0 white,
      $x2 $y 0 $scale purple


[data-whirl='dots-flow']
  &:before
    animation whirl-dots-flow .85s infinite ease
    border-radius 100%
    box-shadow $x1 $y 0px 0 white,
      0px $y 0 0 white,
      $x2 $y 0 0 white
    content ''
    height  $size
    left 50%
    margin-left -($size / 2px)
    margin-top -((1.5 * $size) + $margin)
    position absolute
    top 50%
    width $size
