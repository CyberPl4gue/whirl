@import '../vars.styl'
/**
  * Feeder
  *
  * @author jh3y - https://github.com/jh3y
*/

$size = 20px
$color = $whirl-primary


@keyframes whirl-feeder-fed
  0%
    opacity 0
    transform translateX(-500%)
  30%
  70%
    transform translateX(0)
    opacity 1
  50%
    transform translateX(0) scale(2.5)
  40%
  60%
    transform translateX(0) scale(1.5)
  100%
    opacity 0
    transform translateX(500%)

@keyframes whirl-feeder-feed
  0%
    opacity 0
    transform translateX(-500%)
  40%
    opacity 1
    transform translateX(0)
  100%
    opacity 0
    transform translateX(500%)

[data-whirl='feeder']
  position absolute
  top 50%
  left 50%
  margin-left -($size / 2)
  margin-top -($size / 2)

  div
    position absolute
    height $size
    width $size
    background-color $color
    border-radius 100%

  div:nth-child(1)
    animation whirl-feeder-fed 3s infinite
  div:nth-child(2)
    animation whirl-feeder-feed 3s .25s infinite
  div:nth-child(3)
    animation whirl-feeder-feed 3s .5s infinite
