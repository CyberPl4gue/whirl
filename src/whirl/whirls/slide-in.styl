@import '../vars.styl'

/**
  * Slide in
  *
  * @author jh3y - https://github.com/jh3y
*/

$no-of-el = 3
$size = 20px
$margin = 5px
$diff = $size + $margin
$start = -((math($no-of-el / 2, 'floor')) * $diff + ($size / 2))
$offset = .5s
$color = $whirl-primary

@keyframes whirl-slide-in
  0%
    opacity 0
    transform translateX(-300%)
  30%
  70%
    opacity 1
    transform translateY(0)
  100%
    opacity 0
    transform translateX(300%)



[data-whirl='slide-in']
  bottom 0
  left 0
  position absolute
  right 0
  top 0

  div
    animation whirl-slide-in 1.5s infinite
    background-color $color
    height $size
    left 50%
    margin-top -($size / 2)
    opacity 0
    position absolute
    top 50%
    width $size

  for $el in 1..$no-of-el
    div:nth-of-type({$el})
      animation-delay $el * $offset
      margin-left $start + (($el - 1) * $diff)
