@import '../common/animation/rotate.styl'

/**
  * Chase
  *
  * @author jh3y - https://github.com/jh3y
*/

$size = 30px
$radius = -40px
$thickness = 5px

[data-whirl='chase']

  &:after
  &:before
    $create-pseudo($size, $size)
    animation whirl-rotate 1.25s infinite ease
    border $thickness solid $whirl-primary
    border-radius 100%
    box-shadow 0 $radius 0 -5px $whirl-primary

  &:after
    animation-delay .75s
