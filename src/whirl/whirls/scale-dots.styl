@keyframes whirl-scale-dots
  0%
    transform scale(0) translateX(-40px)
    background green
  10%
    transform scale(1) translateX(-40px)
  20%
    transform scale(0) translateX(-40px)
    background green
  30%
    transform scale(0) translateX(0)
  40%
    transform scale(1.25) translateX(0)
  50%
    background blue
    transform scale(0) translateX(0)
  60%
    background-color red
    transform scale(0) translateX(40px)
  70%
    transform scale(1) translateX(40px)
  80%
  100%
    transform scale(0) translateX(40px)

[data-whirl='scale-dots']
  &:before
    $create-pseudo(30px, 30px)
    border-radius 100%
    background red
    animation whirl-scale-dots 3s infinite
