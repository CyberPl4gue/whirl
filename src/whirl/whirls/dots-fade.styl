@keyframes whirl-dots-fade
  0%
    transform translateX(-40px)
    opacity 0
    background green
  10%
    transform translateX(-40px)
    opacity 1
  20%
    transform translateX(-40px)
    opacity 0
    background green
  30%
    transform translateX(0)
    opacity 0
  40%
    transform translateX(0)
    opacity 1
  50%
    background blue
    transform translateX(0)
    opacity 0
  60%
    transform translateX(40px)
    opacity 0
    background-color red
  70%
    transform translateX(40px)
    opacity 1
  80%
  100%
    transform translateX(40px)
    opacity 0

[data-whirl='dots-fade']
  &:before
    $create-pseudo(30px, 30px)
    border-radius 100%
    background red
    animation whirl-dots-fade 3s infinite
