@import '../common/animation/grow.styl'

/**
  * Split
  *
  * @author jh3y - https://github.com/jh3y
*/

$size = 50px
$color-one = $whirl-primary
$color-two = $whirl-secondary

[data-whirl='swap']

  &:after
  &:before
    $create-pseudo($size, $size)
    border-radius 100%
    opacity .5

  &:after
    animation whirl-grow 1.5s .75s infinite
    background-color $color-one

  &:before
    animation whirl-grow 1.5s infinite
    background-color $color-two
