@import '../vars.styl'

/**
  * Cascade
  *
  * @author jh3y - https://github.com/jh3y
*/

$no-of-el = 5
$size = 20px
$margin = 5px
$diff = $size + $margin
$start = -((math($no-of-el / 2, 'floor')) * $diff + ($size / 2))
$offset = .25s
$color = $whirl-primary

@keyframes whirl-cascade
  0%
    opacity 0
    transform translateY(-250%)
  40%
  60%
    opacity 1
    transform translateY(0)
  100%
    opacity 0
    transform translateY(250%)



[data-whirl='cascade']
  bottom 0
  left 0
  position absolute
  right 0
  top 0

  div
    animation whirl-cascade 2s infinite
    background-color $color
    height $size
    left 50%
    margin-top -($size / 2)
    opacity 0
    position absolute
    top 50%
    width $size

  for $el in 1..$no-of-el
    div:nth-of-type({$el})
      animation-delay $el * $offset
      margin-left $start + (($el - 1) * $diff)
