/**
  * Basic ringed whirl
*/
@keyframes whirl-rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

[data-whirl='traditional']
  &:before
    box-sizing        border-box
    content           ''
    height            50px
    width             50px
    position          absolute
    top               50%
    left              50%
    margin-left       -25px
    margin-top        -25px
    animation         whirl-rotate .5s infinite linear
    box-shadow        5px -25px 50px 0 purple inset
    border-radius     100%
  &:after
    $create-pseudo(40px, 40px)
    background #6bb9f0
    border-radius 100%
