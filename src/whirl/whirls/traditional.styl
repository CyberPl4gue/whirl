/**
  * Basic ringed whirl
*/
@keyframes whirl-rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

[data-whirl='traditional']
  &:before
    box-sizing        border-box
    content           ''
    height            50px
    width             50px
    position          absolute
    top               50%
    left              50%
    margin-left       -25px
    margin-top        -25px
    animation         whirl-rotate .5s infinite linear
    border            6px #777 solid
    border-right-color lighten(#777, 20%)
    border-bottom-color lighten(#777, 40%)
    border-left-color lighten(#777, 60%)
    border-radius     100%
