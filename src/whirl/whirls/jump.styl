@keyframes whirl-jump
  0%
  100%
    transform translateY(200%) scaleY(.5)
  20%
  80%
    transform translateY(200%) scaleY(1)
  50%
    transform translateY(-200%) scaleY(1)

[data-whirl='jump']
  &:before
    $create-pseudo(20px, 20px)
    border-radius 100%
    background white
    animation whirl-jump 1s infinite
    transform-origin bottom center
